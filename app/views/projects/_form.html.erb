<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Project Name</label>
        <div class="col-sm-10">
          <%= form.text_field :name, class:"form-control form-control-lg" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Start Date</label>
        <div class="col-sm-9">
          <%= form.datetime_select :start_date, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Deadline</label>
        <div class="col-sm-9">
          <%= form.datetime_select :end_date, class:"form-control" %>
        </div>
      </div>
    </div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form.submit 'Register New Project', class:"btn btn-success btn-fw float-right" %>
    </div>
  </div>
<% end %>
